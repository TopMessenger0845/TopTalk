<Page x:Class="TopTalk.Pages.TopTalkClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TopTalk.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TopTalkClientPage">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}"
        BorderBrush="Gray" BorderThickness="2" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Настройки подключения -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Style="{StaticResource LabelTextStyle}" Text="{Binding СonnectionStatus, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Column="2" Style="{StaticResource LabelTextStyle}" Text="{Binding CurrentUser, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Grid.Column="4" Margin="0 0 0 10" Text="{Binding СurrentСhat, UpdateSourceTrigger=PropertyChanged}" Style="{DynamicResource LabelTextStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Чат -->
            <ListBox Name="MessagesListBox" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Messages}" Background="{DynamicResource PrimaryBackgroundColor}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Sender}" Style="{StaticResource LabelTextStyle}"/>
                            <TextBox Text="{Binding Content}" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" IsReadOnly="True"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Отправка сообщения -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поле ввода -->
                <Grid>
                    <TextBox x:Name="InputTextBox" Grid.Column="0" Margin="0 10 10 0" 
                         Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource TextBoxStyle}" KeyDown="TextBox_KeyDown"/>

                    <!-- Popup для подсказок -->
                    <Popup IsOpen="{Binding AreHintsVisible}" PlacementTarget="{Binding ElementName=InputTextBox}" StaysOpen="False" Placement="Top">
                        <Border Background="{DynamicResource SecundaryBackgroundColor}" Opacity="0.7" CornerRadius="5 5 0 0" Padding="5" MaxHeight="100" BorderBrush="LightGray" BorderThickness="1" Width="{Binding ActualWidth, ElementName=InputTextBox}">
                            <ScrollViewer VerticalScrollBarVisibility="Disabled" CanContentScroll="True">
                                <ListBox ItemsSource="{Binding Hints}" SelectionChanged="HintsListBox_SelectionChanged" Background="Transparent" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="12" Foreground="WhiteSmoke"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Border>
                    </Popup>
                </Grid>

                <Button Grid.Column="1" Margin="0 10 0 0" Content="Send" Command="{Binding SendMessageCommand}" Style="{StaticResource DarkButtonStyle}"/>
            </Grid>
        </Grid>
    </Border>
</Page>
