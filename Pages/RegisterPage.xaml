<Page x:Class="TopTalk.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TopTalk.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}" 
        BorderBrush="Gray" BorderThickness="2" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Поля ввода -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- Заголовок окна -->
            <TextBlock Grid.Row="0" Text="Регистрация" FontSize="25"
                   Style="{StaticResource LabelTextStyle}" 
                   HorizontalAlignment="Center" Margin="0 0 0 15"/>

            <!-- Поля ввода -->
            <Grid Grid.Row="1" Margin="0 0 0 15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Метки -->
                    <ColumnDefinition Width="*"/>
                    <!-- Поля ввода -->
                </Grid.ColumnDefinitions>

                <!-- Поле Email -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Login:" 
                       Style="{StaticResource LabelTextStyle}" Margin="0 0 10 5"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}" 
                     ToolTip="Введите ваш Login" Margin="0 0 0 5"
                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Поле Пароль -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:" 
                       Style="{StaticResource LabelTextStyle}" Margin="0 0 10 5"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}" 
                     ToolTip="Введите ваш пароль" Margin="0 0 0 5"
                     Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Подтверждение Пароля -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Повторите пароль:" 
                       Style="{StaticResource LabelTextStyle}" Margin="0 0 10 0"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                     Style="{StaticResource TextBoxStyle}" 
                     ToolTip="Введите ваш пароль еще раз" 
                     Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <!-- Кнопки -->
            <Grid Grid.Row="2" HorizontalAlignment="Center">
                <Button Content="Зарегистрироваться" 
                    Command="{Binding RegisterCommand}" 
                    Style="{StaticResource DarkButtonStyle}" Margin="0 5 0 0">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" 
                                                 To="300" Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Width" 
                                                 To="200" Duration="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Page>